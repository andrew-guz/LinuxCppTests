{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake . && make",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build & run BackEnd",
            "type": "shell",
            "command": "./bin/BackEnd",
            "args": [
                "8081"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "build & run FrontEnd",
            "type": "shell",
            "command": "./bin/FrontEnd",
            "args": [
                "--docroot",
                ".",
                "--http-address",
                "0.0.0.0",
                "--http-port",
                "8080"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "dependsOn": [
                "build"
            ]
        }
    ]
}
